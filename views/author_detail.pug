extends layout

block content

    h1 Author: #{author.name}
    h4 Lifespan: #{author.lifespan}
    
    div(style='margin-left:20px;margin-top:20px') 
    
    h4 #[strong Books]
    dl
    //- ul
    each book in books
        dt 
        a(href=book.url) #{book.title}
        dd #{book.summary}
    else
        p This author has no books.

    hr
    p
    if books.length === 0
        a(href=author.url+'/delete') Delete author